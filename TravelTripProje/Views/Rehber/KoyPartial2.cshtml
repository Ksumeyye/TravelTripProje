@using TravelTripProje.Models.Siniflar
@model List<Koyler>
<div class="desti-middle">
    <h4>Sahil Tatil Köyleri</h4>
    @foreach(var x in Model)
    {
    <div class="box-left">
        <div class="bot-img">
            <img src="@x.KoyImage" alt="" style="border-radius:15px; width:120px; height:75px; object-fit:cover; " />
        </div>
        <div class="bot-desc">
            <p>@x.Aciklama.Substring(0,110) ...</p>
        </div>
        <div class="clear"></div>
    </div>
    }
</div>
